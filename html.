    </div>

    <!-- Auth Modal -->
    <div class="auth-modal" id="authModal">
        <div class="auth-card">
            <div class="auth-tabs">
                <button class="auth-tab active" data-tab="user">User Login</button>
                <button class="auth-tab" data-tab="admin">Admin Login</button>
            </div>
            
            <div class="auth-content">
                <!-- User Login Form -->
                <form class="auth-form" id="userLoginForm" style="display: block;">
                    <h3>Login with Mobile Number</h3>
                    <input type="tel" placeholder="Mobile Number" required>
                    <input type="password" placeholder="Password" required>
                    <button type="submit">Login</button>
                    <p style="text-align: center; margin-top: 15px; font-size: 14px;">
                        <a href="#" style="color: var(--primary);">Forgot password?</a>
                    </p>
                </form>
                
                <!-- Admin Login Form -->
                <form class="auth-form" id="adminLoginForm" style="display: none;">
                    <h3>Admin Login</h3>
                    <div class="auth-divider">Sign in with</div>
                    <button class="oauth-btn">
                        <i class="fab fa-google" style="color: #DB4437;"></i> Gmail
                    </button>
                    <div class="auth-divider">or</div>
                    <input type="email" placeholder="Admin Email" required>
                    <input type="password" placeholder="Password" required>
                    <button type="submit">Login as Admin</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Media Modal -->
    <div class="media-modal" id="mediaModal">
        <div class="media-modal-content">
            <button class="close-modal" id="closeMediaModal">&times;</button>
            <img id="modalImage" src="" alt="Expanded view">
        </div>
    </div>

    <script>
        // DOM Elements
        const themeToggle = document.getElementById('themeToggle');
        const adminPanelBtn = document.getElementById('adminPanelBtn');
        const adminPanel = document.getElementById('adminPanel');
        const closeAdminPanel = document.getElementById('closeAdminPanel');
        const authModal = document.getElementById('authModal');
        const mediaModal = document.getElementById('mediaModal');
        const closeMediaModal = document.getElementById('closeMediaModal');
        const postOptionsBtns = document.querySelectorAll('.post-options-btn');
        const likeBtns = document.querySelectorAll('.like-btn');
        const saveBtns = document.querySelectorAll('.save-btn');
        const userRole = document.getElementById('userRole');
        const fabBtn = document.getElementById('fabBtn');
        const authTabs = document.querySelectorAll('.auth-tab');
        const userLoginForm = document.getElementById('userLoginForm');
        const adminLoginForm = document.getElementById('adminLoginForm');
        const postMediaElements = document.querySelectorAll('.post-media');
        
        // Current user role (for demo purposes)
        let currentRole = 'normal'; // Change to 'admin' or 'main-admin' to see different UI
        
        // Initialize based on role
        function setUserRole(role) {
            currentRole = role;
            userRole.textContent = role === 'normal' ? 'Normal User' : 
                                  role === 'admin' ? 'Admin' : 'Main Admin (MFW)';
            
            // Show/hide elements based on role
            document.querySelectorAll('[data-role]').forEach(el => {
                const requiredRole = el.getAttribute('data-role');
                if (requiredRole === role) {
                    el.style.display = el.tagName === 'BUTTON' ? 'inline-block' : 'block';
                } else {
                    el.style.display = 'none';
                }
            });
            
            // Update admin panel button visibility
            const adminBtns = document.querySelectorAll('#adminPanelBtn');
            adminBtns.forEach(btn => {
                if (btn.getAttribute('data-role') === role) {
                    btn.style.display = 'inline-block';
                } else {
                    btn.style.display = 'none';
                }
            });
        }
        
        // Theme Toggle
        themeToggle.addEventListener('click', () => {
            const isDark = document.body.getAttribute('data-theme') === 'dark';
            if (isDark) {
                document.body.removeAttribute('data-theme');
                themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
                localStorage.setItem('theme', 'light');
            } else {
                document.body.setAttribute('data-theme', 'dark');
                themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
                localStorage.setItem('theme', 'dark');
            }
        });
        
        // Load saved theme
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'dark') {
            document.body.setAttribute('data-theme', 'dark');
            themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
        }
        
        // Admin Panel Toggle
        adminPanelBtn?.addEventListener('click', () => {
            adminPanel.classList.add('open');
        });
        
        closeAdminPanel.addEventListener('click', () => {
            adminPanel.classList.remove('open');
        });
        
        // Post Options Menu
        postOptionsBtns.forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.stopPropagation();
                const menu = btn.nextElementSibling;
                menu.classList.toggle('show');
            });
        });
        
        // Close menus when clicking elsewhere
        document.addEventListener('click', () => {
            document.querySelectorAll('.post-options-menu').forEach(menu => {
                menu.classList.remove('show');
            });
        });
        
        // Like Button Animation
        likeBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const icon = this.querySelector('i');
                if (icon.classList.contains('far')) {
                    icon.classList.remove('far');
                    icon.classList.add('fas', 'liked');
                    this.classList.add('like-animation');
                    
                    // Remove animation class after animation completes
                    setTimeout(() => {
                        this.classList.remove('like-animation');
                    }, 500);
                } else {
                    icon.classList.remove('fas', 'liked');
                    icon.classList.add('far');
                }
            });
        });
        
        // Save Button Toggle
        saveBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                const icon = this.querySelector('i');
                if (icon.classList.contains('far')) {
                    icon.classList.remove('far');
                    icon.classList.add('fas', 'saved');
                } else {
                    icon.classList.remove('fas', 'saved');
                    icon.classList.add('far');
                }
            });
        });
        
        // FAB Button Action
        fabBtn.addEventListener('click', () => {
            alert('Add new post, event, or marketplace item!');
        });
        
        // Auth Tabs
        authTabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const tabName = tab.getAttribute('data-tab');
                
                // Update active tab
                authTabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                // Show correct form
                if (tabName === 'user') {
                    userLoginForm.style.display = 'block';
                    adminLoginForm.style.display = 'none';
                } else {
                    userLoginForm.style.display = 'none';
                    adminLoginForm.style.display = 'block';
                }
            });
        });
        
        // Media Modal
        postMediaElements.forEach(media => {
            media.addEventListener('click', () => {
                const src = media.getAttribute('src');
                document.getElementById('modalImage').setAttribute('src', src);
                mediaModal.classList.add('open');
            });
        });
        
        closeMediaModal.addEventListener('click', () => {
            mediaModal.classList.remove('open');
        });
        
        // Close modals when clicking outside
        window.addEventListener('click', (e) => {
            if (e.target === authModal) {
                authModal.classList.remove('open');
            }
            if (e.target === mediaModal) {
                mediaModal.classList.remove('open');
            }
            if (e.target === adminPanel) {
                adminPanel.classList.remove('open');
            }
        });
        
        // Role switching for demo (can be removed in production)
        document.addEventListener('keydown', (e) => {
            // Secret keys to switch roles for demo
            if (e.altKey) {
                switch(e.key) {
                    case '1': setUserRole('normal'); break;
                    case '2': setUserRole('admin'); break;
                    case '3': setUserRole('main-admin'); break;
                }
            }
        });
        
        // Filter buttons in marketplace
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });
        
        // Initialize
        setUserRole(currentRole);
        
        // Skeleton loading simulation
        window.addEventListener('load', () => {
            // Simulate loading delay
            setTimeout(() => {
                document.body.style.opacity = 1;
            }, 300);
        });
        
        // Demo notification
        setTimeout(() => {
            const notificationBadge = document.querySelector('.notification-badge');
            if (notificationBadge) {
                notificationBadge.textContent = parseInt(notificationBadge.textContent) + 1;
            }
        }, 5000);
        
        // Add subtle animations to cards on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = 1;
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);
        
        // Observe all post cards
        document.querySelectorAll('.post-card').forEach(card => {
            card.style.opacity = 0;
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            observer.observe(card);
        });
    </script>
</body>
</html>
